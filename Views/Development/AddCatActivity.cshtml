@model MvcDemo.Models.Activity

<center>
        <div class="header">
           <h1>Create Activity</h1>
        </div>
    </center>

   
 <div class ="return">
        <a asp-controller="Development" asp-action="AgeCatActivities" asp-route-id=@ViewBag.CatId > <img src="~/css/Images/return.png"   /></a>  
 </div>
 <hr/>


<center>
      <form asp-action="AddCatActivity"  enctype="multipart/form-data" >
          
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="form-group">
                <label asp-for="category" class="control-label"></label>
                <div class="cat-container">
                <input  asp-for="category"  class="form-control input" value=@ViewBag.CatId  readonly />
                </div>
              </div>

              <div class="form-group">
                  <label asp-for="title" class="control-label"></label>
                  <input  asp-for="title" class="form-control input" placeholder="Title" />
                  <span asp-validation-for="title" class="text-danger"></span>
              </div>

              <div class="form-group">
                  <label asp-for="tips" class="control-label"></label>
                  <textarea  asp-for="tips" class="form-control input2" style="height:90px;"  placeholder="Tips"> </textarea>
                  <span asp-validation-for="tips" class="text-danger"></span>
              </div>

               <div class="image-container">
                    <div class="form-group">
                         <label id="lblImage" class="control-label">Image</label>
                         <input  name="postedFiles"  type="file"  style="height:40px;" class="form-control input" placeholder="Title"  multiple />
                         <p style="color: red;">@ViewBag.Error</p>
                    </div>

                     <div class="form-group" >
                          <input type="submit" value="Create" style="width:150px; margin-top:10px;" class="btn"  />
                      </div>
              </div>

                   
 </form>

</center>


















<style>
.btn {
  background-color: #22B7AD;
  border: none;
  color: #0F3A61;
  padding: 10px;
  font-size: 15px;
  border-radius: 50px;
  margin-left: 10px;
}

.header h1{
    font-family:HelveticaNeue-Light;
    color:#0F3A61; 
    margin-top:8%;
}

.return img{
    width: 35px; 
    margin-left:10%; 
    margin-bottom:1em;
}

.input{
    border-radius: 50px;
    width:75%;
    text-align: center;
}

.input2{
    border-radius: 50px;
    width:75%;
    text-align: center;
    height:90px;
}



@@media only screen and (min-width:768px){
       .title h1{
            padding-top:2%; 
            font-size: 17px;
        }

}

@@media only screen and (min-width:1000px){
        .header h1{
                     margin-top:3%;
                   }

        .return img{
            width: 50px; 
            margin-left:10%; 
            margin-bottom:1%
            }

        
        .input{
            width:40%;
              } 

        .input2{
            width:40%;
        }
}


</style>