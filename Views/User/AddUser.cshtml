@model MvcDemo.Models.PwUser


<center>

    <h1 style="font-family:HelveticaNeue-Light;color:#0F3A61; margin-top:7%">Add User</h1>
    <hr />
    <div class=form-horizontal>

        <form asp-action="AddUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p style="color: red;">@ViewBag.Error</p>
           
            <div class="form-group">
                <label asp-for="email" class="control-label "></label>
                <input asp-for="email" class="form-control form-input" placeholder="Email"/>
                    <span asp-validation-for="email" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="password" class="control-label "></label>
                <input asp-for="password" type="password" class="form-control form-input"  placeholder="Password"/>
                    <span asp-validation-for="password" class="text-danger"></span>
            </div>


             <div class="form-group">
                <label asp-for="fName" class="control-label "></label>
                <input asp-for="fName" class="form-control form-input"  placeholder="First Name"/>
                    <span asp-validation-for="fName" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="lName" class="control-label "></label>
                <input asp-for="lName" class="form-control form-input" placeholder="Last Name"/>
                    <span asp-validation-for="lName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="role" class="control-label"></label>
                <select id="RoleType" name="RoleType"  class="form-control form-input" asp-items="@((List<SelectListItem>)ViewData["Roles"])"></select>
                <br>
            </div>

        
            <!--add admin button button -->
            <div class="form-group">
                <input type="submit" value="Create" style="width:150px" class="btn"  />
            </div>
        </form>

    </div>

</center>


<style>
    .btn {
  background-color: #22B7AD;
  border: none;
  color: #0F3A61;
  padding: 10px;
  font-size: 15px;
  border-radius: 50px;
  margin-left: 10px;
}

.form-input{
    width:80%; 
    border-radius:50px; 
    text-align:center;
}

@@media only screen and (min-width:1000px)
{
    .form-input{
    width:30%;
    }
}


</style>